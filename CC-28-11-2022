// Write a program that takes an array of numbers and returns the sum of all the positive numbers
// If the array has no positive numbers return 0 instead

public class Positive{

  public static int sum(int[] arr){
    int total = 0;
    for(int i = 0; i < arr.length; i++){
      if(arr[i] >= 0){
        total = total + arr[i];
      }
    }
    return total;
  }

}
